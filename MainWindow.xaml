<Window x:Class="BuildingPlanCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildingPlanCalc"
        mc:Ignorable="d" 
        
        WindowStartupLocation="CenterScreen"
       AllowsTransparency="True" WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        x:Name="window"
        Title="АКС"
        FontFamily="Roboto"
       
        Height="650"  Width="850" SizeChanged="window_SizeChanged" 
        KeyDown="window_KeyDown" 
        KeyUp="window_KeyUp">
    <Window.Background>
        <SolidColorBrush Opacity="0.3" Color="Gray"/>
    </Window.Background>

    <Window.Resources>

        <Style x:Key="ControlButtonStyle">
            <Setter Property="Button.HorizontalAlignment" Value="Right"/>
            <Setter Property="Button.VerticalAlignment" Value="Top"/>
            <Setter Property="Button.Margin" Value="2"/>
            <Setter Property="Button.Padding" Value="0"/>
            <Setter Property="Button.Height" Value="20"/>
            <Setter Property="Button.Width" Value="20"/>
            <Setter Property="Button.Background" Value="{x:Null}"/>
            <Setter Property="Button.BorderBrush" Value="{x:Null}"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="Btn">
            <Setter Property="Button.VerticalAlignment" Value="Center"/>
            <Setter Property="Button.HorizontalAlignment" Value="Right"/>
            <Setter Property="Button.Height" Value="25"/>
            <Setter Property="Button.Width" Value="25"/>
            <Setter Property="Button.Padding" Value="1"/>
            <Setter Property="Button.Margin" Value="2"/>
        </Style>

    </Window.Resources>

    <DockPanel>
        <!--Header-->

        <Grid DockPanel.Dock="Top" x:Name="Header" Height="27" Background="#FF5FA1B0" 
              PreviewMouseLeftButtonDown="Header_PreviewMouseLeftButtonDown" 
              PreviewMouseLeftButtonUp="Header_PreviewMouseLeftButtonUp" 
              PreviewMouseMove="Header_PreviewMouseMove">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Авто-Калькулятор Смет (АКС)" Margin="10 0" Foreground="White"/>
            <StackPanel Panel.ZIndex="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Height="auto">
                <Button Style="{StaticResource ControlButtonStyle}"  ToolTip="Свернуть" PreviewMouseLeftButtonDown="MinimizeWindow">
                    <Image Source="Assets/window-minimize.png" />
                </Button>
                <Button Style="{StaticResource ControlButtonStyle}"  ToolTip="Развернуть" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown">
                    <Image Source="Assets/window-maximize.png"/>
                </Button>
                <Button  Style="{StaticResource ControlButtonStyle}" ToolTip="Закрыть" PreviewMouseLeftButtonDown="AppClose">
                    <Image Source="Assets/window-close.png" />
                </Button>
            </StackPanel>
        </Grid>

        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="235"/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="HeighLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="RoomsLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="RoofLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Fasade0Layout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Fasade1Layout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Fasade2Layout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Fasade3Layout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor0ODLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor0DoorsLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor0TerasesLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor1ODLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor1DoorsLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor1TerasesLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor2ODLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor2DoorsLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor2BalconyLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor3ODLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor3DoorsLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="Floor3BalconyLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="HemmingLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="FencingLayout" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
            <Canvas Grid.Column="0" Panel.ZIndex="1" x:Name="CanvasForPhantomShape" Background="Transparent"/>

            <TextBlock x:Name="Tb_Information" VerticalAlignment="Top" HorizontalAlignment="Center" Width="auto" Margin="10"/>

            <TextBlock x:Name="Tb_CursorСoordinates" Panel.ZIndex="-1" Text="X:0 Y:0" Foreground="Black" Grid.Column="0" Margin="5" VerticalAlignment="Bottom"/>

            <StackPanel Grid.Column="1"  Orientation="Vertical"
                       Background="White" Opacity="0.9">
                <!--Проект и пользователь-->
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0 0 0 5"
                               Text="Номер проекта AS-"/>
                    <TextBox x:Name="TB_ProjectName" Grid.Row="0" Grid.Column="1" TextChanged="TB_ProjectName_TextChanged"
                             Margin="0 0 0 5"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Заполнил"/>
                    <TextBox x:Name="TB_UserName" Grid.Row="1" Grid.Column="1" TextChanged="TB_UserName_TextChanged"/>
                    <Button Margin="0 5 0 0"
                            x:Name="Btn_LoadData"
                            Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Загрузить данные проекта"
                            IsEnabled="{Binding ElementName=TB_ProjectName, Path=Text.Length}" Click="LoadProjectDataAsync"
                            />
                </Grid>
                <!--Кнопки управления-->
                <Grid Margin="5 0 5 5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="Btn_ClearAllProject" 
                            ToolTip="Очистить весь проект (Ctrl + N)"
                            Grid.Column="0" Content="Очистить все" Background="#FFF0A98E" 
                            Click="Btn_ClearAllProject_Click"></Button>
                    <Button ToolTip="Очистить выбранный слой (Ctrl + Q)"
                            Grid.Column="2" 
                            Content="Очистить слой" Background="#FFACD8D2" Click="ClearSelectedLayout_Click"
                             >
                    </Button>
                    <Button
                        x:Name="Btn_DeleteLastLine" 
                        Content="Действие назад (Ctrl + Z)" Click="Btn_DeleteLastLine_Click" IsEnabled="False"
                        ToolTip="Отменить последнюю фигуру (Ctrl + Z)"
                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"  Margin="0 3">

                    </Button>
                </Grid>
                <!--Настройки масштаба-->
                <Grid Margin="5 0 5 5" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Масштаб (мм)" Grid.Row="0" />
                    <TextBox x:Name="TB_RealLength" Margin="5 0" Grid.Column="1" PreviewTextInput="NumberValidationTextBox" Grid.Row="0"/>
                    <Button Grid.Column="2" Style="{StaticResource Btn}"
                            x:Name="Btn_SetRange"
                            IsEnabled="{Binding ElementName=TB_RealLength, Path=Text.Length}" Click="Btn_SetRange_Click">
                        <Image Source="Assets/roulette.png" />
                    </Button>
                    <GroupBox Header="Этажность дома" Grid.Row="1" Grid.ColumnSpan="3">
                        <StackPanel>
                            <CheckBox x:Name="Floor0Enabled" Content="Цокольный этаж" Margin="0 5 0 0" Checked="Floor0" Unchecked="Floor0"/>
                            <ComboBox x:Name="SetFloorsHouse" Margin="0 3 0 0" SelectionChanged="SetFloorsHouseChanged">
                                <ComboBoxItem Content="Одноэтажный" IsSelected="True"/>
                                <ComboBoxItem Content="Двухэтажный"/>
                                <ComboBoxItem Content="Трехэтажный"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>
                </Grid>

                <local:WheelSpeedScrollViewer VerticalScrollBarVisibility="Auto"  Margin="5 0" 
                                              CanContentScroll="False" x:Name="TControl">
                    <StackPanel >
                        <GroupBox>
                            <GroupBox.Header>
                                <RadioButton x:Name="RB_SetHeighSetupLayout" IsChecked="True" Content="Высоты этажей" GroupName="Layouts" Checked="RB_SetHeighSetupLayout_Checked"/>
                            </GroupBox.Header>
                            <StackPanel>
                                <Grid x:Name="Floor0HeighSetupBlock" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_Set0FloorHeight" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right"/>
                                    <TextBlock Text="Цокольный" HorizontalAlignment="Stretch" Grid.Column="0" />
                                    <Button x:Name="Btn_Set0FloorHeight" Style="{StaticResource Btn}"
                                                HorizontalAlignment="Right" Click="Btn_Set0FloorHeight_Click" Background="#FF5ADE96" Grid.Column="2">
                                        <Image Source="Assets/roulette.png"  />
                                    </Button>
                                </Grid>
                                <Grid x:Name="Floor1HeighSetupBlock">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_Set1FloorHeight" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right"/>
                                    <TextBlock  Text="Первый" HorizontalAlignment="Stretch"/>
                                    <Button x:Name="Btn_Set1FloorHeight" Style="{StaticResource Btn}"
                                            HorizontalAlignment="Right" 
                                            Click="Btn_Set1FloorHeight_Click" 
                                            Grid.Column="2"
                                            Background="#FFE84B4B">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                                <Grid x:Name="Floor2HeighSetupBlock" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_Set2FloorHeight" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right"/>
                                    <TextBlock  Text="Второй" HorizontalAlignment="Stretch"/>
                                    <Button x:Name="Btn_Set2FloorHeight" Style="{StaticResource Btn}"
                                            Grid.Column="2"
                                                HorizontalAlignment="Right" Click="Btn_Set2FloorHeight_Click" Background="#FFDC9E30">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                                <Grid x:Name="Floor3HeighSetupBlock" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_Set3FloorHeight" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right"/>
                                    <TextBlock Text="Третий" HorizontalAlignment="Stretch"/>
                                    <Button x:Name="Btn_Set3FloorHeight" Style="{StaticResource Btn}" Grid.Column="2"
                                                HorizontalAlignment="Right" Click="Btn_Set3FloorHeight_Click" Background="#FF4BC9EE">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_SetFullHouseHeight" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right" Margin="5 0 0 0"/>
                                    <TextBlock TextWrapping="Wrap" Text="Высота от пола верхнего этажа до конька" 
                                                   HorizontalAlignment="Stretch" Grid.Column="0"/>
                                    <Button x:Name="Btn_SetFullHouseHeight" Style="{StaticResource Btn}" Grid.Column="2"
                                                Click="Btn_SetFullHouseHeight_Click" Background="#FFF56614">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_SetRoofMinWallHeight" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right" Margin="5 0 0 0"/>
                                    <TextBlock TextWrapping="Wrap"
                                            Text="Минимальная высота внешних стен верхнего этажа"
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                    <Button x:Name="Btn_SetRoofMinWallHeight" Style="{StaticResource Btn}"
                                            Grid.Column="2"
                                            HorizontalAlignment="Right" 
                                            Click="Btn_SetRoofMinWallHeight_Click" 
                                            Background="#FFDCBD32">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="145" TextWrapping="Wrap"
                                            Grid.Column="0"
                                            Text="Деревянные столбы до 3 м. (шт.) - "/>
                                    <TextBox x:Name="Tb_SetWoodenPillarsLessCount" PreviewTextInput="NumberValidationTextBox" Grid.Column="1" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="145" TextWrapping="Wrap"
                                            Grid.Column="0"
                                            Text="Деревянные столбы выше 3 м. (шт.) - "/>
                                    <TextBox 
                                              x:Name="Tb_SetWoodenPillarsOverCount"
                                               PreviewTextInput="NumberValidationTextBox" Grid.Column="1" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="145" TextWrapping="Wrap"
                                            Grid.Column="0"
                                            Text="Бетонные столбы до 3 м. (шт.) - "/>
                                    <TextBox 
                                              x:Name="Tb_SetConcretePillarsLessCount"
                                               PreviewTextInput="NumberValidationTextBox" Grid.Column="1" TextChanged="Tb_SetConcretePillarsLessCount_TextChanged" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="145" TextWrapping="Wrap"
                                            Grid.Column="0"
                                            Text="Бетонные столбы выше 3 м. (шт.) - "/>
                                    <TextBox 
                                              x:Name="Tb_SetConcretePillarsOverCount"
                                               PreviewTextInput="NumberValidationTextBox" Grid.Column="1" TextChanged="Tb_SetConcretePillarsOverCount_TextChanged" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_Floor0PlinthHeight" Grid.Column="1" Text="0.00 м." 
                                                       HorizontalAlignment="Right" Margin="5 0 0 0"/>
                                    <TextBlock TextWrapping="Wrap"
                                                    
                                            Text="Высота цоколя над землей до плиты перекрытия" 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                    <Button 
                                                        x:Name="Btn_SetFloor0PlinthHeight"
                                                        Style="{StaticResource Btn}"
                                                HorizontalAlignment="Right" Grid.Column="2" Click="Btn_SetFloor0PlinthHeight_Click" Background="#FFE68039">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                                <StackPanel>
                                    <TextBlock TextWrapping="Wrap" 
                                                               x:Name="TB_PlinthOpenPerc"
                                                    Text="Сбоку цоколь открыт на 0% (дом на склоне)" 
                                                    HorizontalAlignment="Stretch"/>
                                    <Slider x:Name="PlinthOpenPerc" Minimum="0" Maximum="100" ValueChanged="PlinthOpenPerc_ValueChanged"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox >
                            <GroupBox.Header>
                                <RadioButton Content="Ограждения" x:Name="RB_SetLayout" GroupName="Layouts" Checked="RB_SetLayout_Checked"/>
                            </GroupBox.Header>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock TextWrapping="Wrap"
                                            Text="Ограждения из газобетона"
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                    <TextBox IsReadOnly="True" x:Name="Tb_SetConcreteRailingLength" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right" Margin="5 0 0 0"/>
                                    <Button x:Name="Btn_SetConcreteRailingLength" Style="{StaticResource Btn}"
                                            Grid.Column="2"
                                            HorizontalAlignment="Right" 
                                            Background="#FFF54F35" Click="Btn_SetConcreteRailingLength_Click">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox >
                            <GroupBox.Header>
                                <RadioButton Content="Кровля" x:Name="RB_SetRoofLayout" GroupName="Layouts" Checked="RB_SetRoofLayout_Checked"/>
                            </GroupBox.Header>
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_SetRoofSquare" Grid.Column="1" Text="0.00 кв.м." HorizontalAlignment="Right" Margin="5 0 0 0"/>
                                    <TextBlock TextWrapping="Wrap"
                                                      
                                            Text="Площадь, накрытая основной кровлей" 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                    <Button x:Name="Btn_SetRoofSquare" Style="{StaticResource Btn}"
                                                 Grid.Column="2" Click="Btn_SetRoofSquare_Click" Background="#FF81C918">
                                        <Image Source="Assets/square.png" />
                                        
                                    </Button>
                                    <Button 
                                                x:Name="Btn_SetRoofSquareTriangle"
                                                Style="{StaticResource Btn}"
                                                Grid.Column="3"  Background="#FF81C918" Click="Btn_SetRoofSquareTriangle_Click" >
                                        <Image Source="Assets/triangle.png" />
                                    </Button>
                                </Grid>
                                <Grid>
                                    <ComboBox x:Name="RoofType" 
                                          Margin="0 3 2 0" SelectionChanged="RoofType_SelectionChanged">

                                        <ComboBoxItem Content="Двускатная"/>
                                        <ComboBoxItem Content="Вальма"/>
                                        <ComboBoxItem Content="Односкатная"/>
                                        <ComboBoxItem Content="Плоская"/>
                                    </ComboBox>
                                    <TextBlock Margin="5 6 0 0" Text="Форма кровли" IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=RoofType,Path=SelectedItem}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_SetRoofLength" Grid.Column="1" Text="0.00 м." HorizontalAlignment="Right" Margin="5 0 0 0"/>
                                    <TextBlock TextWrapping="Wrap"
                                                    
                                            Text="Длина основной кровли" 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                    <Button x:Name="Btn_SetRoofLength" Style="{StaticResource Btn}"
                                                HorizontalAlignment="Right" Grid.Column="2" Click="Btn_SetRoofLength_Click" Background="#FF56CDB2">
                                        <Image Source="Assets/roulette.png" />
                                    </Button>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="30"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox IsReadOnly="True" x:Name="Tb_SetCanopySquare" Grid.Column="1" Text="0.00 кв.м." HorizontalAlignment="Right" Margin="5 0 0 0"/>
                                    <TextBlock TextWrapping="Wrap"
                                                    
                                            Text="Площадь, накрытая навесами" 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                    <Button x:Name="Btn_SetCanopySquare" Style="{StaticResource Btn}"
                                                 Grid.Column="2" Click="Btn_SetCanopySquare_Click" Background="#FF29B9E4">
                                        <Image Source="Assets/square.png" />
                                    </Button>
                                    <Button 
                                                x:Name="Btn_SetCanopySquareTriangle"
                                                Style="{StaticResource Btn}"
                                                Grid.Column="3"  Background="#FF29B9E4" Click="Btn_SetCanopySquareTriangle_Click"  >
                                        <Image Source="Assets/triangle.png" />
                                    </Button>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
