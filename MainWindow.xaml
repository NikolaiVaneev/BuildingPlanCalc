<Window x:Class="BuildingPlanCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuildingPlanCalc"
        mc:Ignorable="d" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        x:Name="window"
        FontFamily="Roboto"
        Height="650" Width="850" SourceInitialized="Window_SourceInitialized" SizeChanged="window_SizeChanged">
    <Window.Resources>
        <Style x:Key="ControlButtonStyle">
            <Setter Property="Button.HorizontalAlignment" Value="Right"/>
            <Setter Property="Button.VerticalAlignment" Value="Top"/>
            <Setter Property="Button.Margin" Value="2"/>
            <Setter Property="Button.Padding" Value="0"/>
            <Setter Property="Button.Height" Value="20"/>
            <Setter Property="Button.Width" Value="20"/>
            <Setter Property="Button.Background" Value="{x:Null}"/>
            <Setter Property="Button.BorderBrush" Value="{x:Null}"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="RouletteBtn">
            <Setter Property="Button.VerticalAlignment" Value="Center"/>
            <Setter Property="Button.Height" Value="25"/>
            <Setter Property="Button.Width" Value="25"/>
            <Setter Property="Button.Padding" Value="1"/>
            <Setter Property="Button.Margin" Value="2"/>
            <Setter Property="Button.ToolTip" Value="Линейка"/>
        </Style>
        <Style x:Key="SquereBtn">
            <Setter Property="Button.VerticalAlignment" Value="Center"/>
            <Setter Property="Button.HorizontalAlignment" Value="Right"/>
            <Setter Property="Button.Height" Value="25"/>
            <Setter Property="Button.Width" Value="25"/>
            <Setter Property="Button.Padding" Value="1"/>
            <Setter Property="Button.Margin" Value="2"/>

            <Setter Property="Button.ToolTip" Value="Прямоугольник"/>
        </Style>
    </Window.Resources>
    <Window.Background>
        <SolidColorBrush Opacity="0.3" Color="Gray"/>
    </Window.Background>
    <DockPanel>
        <!--Header-->
        <Grid DockPanel.Dock="Top" x:Name="Header" Height="27" Background="#FF5FA1B0" 
              PreviewMouseLeftButtonDown="Header_PreviewMouseLeftButtonDown" 
              PreviewMouseLeftButtonUp="Header_PreviewMouseLeftButtonUp" 
              PreviewMouseMove="Header_PreviewMouseMove">
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Авто-Калькулятор Смет (АКС)" Margin="10 0" Foreground="White"/>
            <StackPanel Panel.ZIndex="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Height="auto">
                <Button Style="{StaticResource ControlButtonStyle}"  ToolTip="Свернуть" PreviewMouseLeftButtonDown="MinimizeWindow">
                    <Image Source="Assets/window-minimize.png" />
                </Button>
                <Button Style="{StaticResource ControlButtonStyle}"  ToolTip="Развернуть" PreviewMouseLeftButtonDown="Button_PreviewMouseLeftButtonDown">
                    <Image Source="Assets/window-maximize.png"/>
                </Button>
                <Button  Style="{StaticResource ControlButtonStyle}" ToolTip="Закрыть" PreviewMouseLeftButtonDown="AppClose">
                    <Image Source="Assets/window-close.png" />
                </Button>
            </StackPanel>
        </Grid>



        <Grid DockPanel.Dock="Bottom" ClipToBounds="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="225"/>
            </Grid.ColumnDefinitions>
            <Canvas Grid.Column="0" Panel.ZIndex="2" x:Name="CanvasForMainShape" Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove" >

            </Canvas>
            <Canvas Grid.Column="0" Panel.ZIndex="1" x:Name="CanvasForPhantomShape" Background="Transparent"/>
            <TextBlock x:Name="Tb_CursorСoordinates" Panel.ZIndex="-1" Text="X:0 Y:0" Foreground="Black" Grid.Column="0" Margin="5" VerticalAlignment="Bottom"/>

            <StackPanel Grid.Column="1"  Orientation="Vertical"
                       Background="White" Opacity="0.9">
                <!--Проект и пользователь-->
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Номер проекта AS-"/>
                    <TextBox x:Name="TB_ProjectName" Grid.Row="0" Grid.Column="1" TextChanged="TB_ProjectName_TextChanged"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Заполнил"/>
                    <TextBox x:Name="TB_UserName" Grid.Row="1" Grid.Column="1" TextChanged="TB_UserName_TextChanged"/>
                    <Button Margin="0 5 0 0"
                            
                            Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Загрузить данные проекта"
                            IsEnabled="{Binding ElementName=TB_ProjectName, Path=Text.Length}" Click="LoadProjectData"
                            />
                </Grid>

                <!--Кнопки управления-->
                <Grid Margin="5 0 5 5">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Button x:Name="Btn_ClearAllProject" 
                            ToolTip="Очистить весь проект (Ctrl + N)"
                            Grid.Column="0" Content="Очистить все" Background="#FFF0A98E" 
                            Click="Btn_ClearAllProject_Click"></Button>
                    <Button ToolTip="Очистить визуальный слой без удаления данных (Ctrl + Q)"
                            Grid.Column="2" 
                            Content="Очистить слой" Background="#FFACD8D2" Click="ClearAllMainLine_Click"
                             >
                    </Button>
                    <Button
                        x:Name="Btn_DeleteLastLine" 
                        Content="Отменить" Click="Btn_DeleteLastLine_Click" IsEnabled="False"
                        ToolTip="Отменить последнюю фигуру (Ctrl + Z)"
                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"  Margin="0 3">

                    </Button>
                </Grid>

                <!--Настройки масштаба-->
                <Grid Margin="5 0 5 5" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Масштаб (мм)" Grid.Row="0"/>
                    <TextBox x:Name="TB_RealLength" Grid.Column="1" PreviewTextInput="NumberValidationTextBox" Grid.Row="0"/>
                    <Button Grid.Column="2" Style="{StaticResource RouletteBtn}"
                            x:Name="Btn_SetRange"
                            IsEnabled="{Binding ElementName=TB_RealLength, Path=Text.Length}" Click="Btn_SetRange_Click">
                        <Image Source="Assets/roulette.png" />
                    </Button>
                    <GroupBox Header="Этажность дома" Grid.Row="1" Grid.ColumnSpan="3">
                        <StackPanel>
                            <CheckBox x:Name="Floor0Enabled" Content="Цокольный этаж" Margin="0 5 0 0" Checked="Floor0" Unchecked="Floor0"/>
                            <ComboBox x:Name="SetFloorsHouse" Margin="0 3 0 0" SelectionChanged="SetFloorsHouseChanged">
                                <ComboBoxItem Content="Одноэтажный" IsSelected="True"/>
                                <ComboBoxItem Content="Двухэтажный"/>
                                <ComboBoxItem Content="Трехэтажный"/>
                            </ComboBox>
                        </StackPanel>
                    </GroupBox>
                </Grid>

                <!--Height="465"-->

                <ScrollViewer x:Name="TControl" Margin="5 0" Height="388" VerticalScrollBarVisibility="Auto">
                            <StackPanel >

                                <GroupBox Header="Высоты этажей">
                                    <StackPanel>
                                        <Grid x:Name="Floor0HeighSetupBlock" Visibility="Collapsed">
                                            <TextBlock x:Name="Tb_Set0FloorHeight" Text="Цокольный - 0 м." HorizontalAlignment="Stretch"/>
                                            <Button x:Name="Btn_Set0FloorHeight" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Click="Btn_Set0FloorHeight_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid x:Name="Floor1HeighSetupBlock">
                                            <TextBlock x:Name="Tb_Set1FloorHeight" Text="Первый - 0 м." HorizontalAlignment="Stretch"/>
                                            <Button x:Name="Btn_Set1FloorHeight" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Click="Btn_Set1FloorHeight_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid x:Name="Floor2HeighSetupBlock" Visibility="Collapsed">
                                            <TextBlock x:Name="Tb_Set2FloorHeight" Text="Второй - 0 м." HorizontalAlignment="Stretch"/>
                                            <Button x:Name="Btn_Set2FloorHeight" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Click="Btn_Set2FloorHeight_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid x:Name="Floor3HeighSetupBlock" Visibility="Collapsed">
                                            <TextBlock x:Name="Tb_Set3FloorHeight" Text="Третий - 0 м." HorizontalAlignment="Stretch"/>
                                            <Button x:Name="Btn_Set3FloorHeight" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Click="Btn_Set3FloorHeight_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>

                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="Комнаты">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Кол-во комнат всего - " HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <TextBox x:Name="TB_RoomCount" Grid.Column="1" PreviewTextInput="NumberValidationTextBox" TextChanged="TB_RoomCount_TextChanged"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Кол-во спален, шт - " HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <TextBox x:Name="TB_BedroomCount" Grid.Column="1" PreviewTextInput="NumberValidationTextBox" TextChanged="TB_BedroomCount_TextChanged"/>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetKitchenSquare"
                                            Text="Площадь кухонь и гостиных - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetKitchenSquare" Style="{StaticResource SquereBtn}"
                                                 Grid.Column="1" Click="Btn_SetKitchenSquare_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                        </Grid>

                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Header="Кровля">
                                    <StackPanel>
                                        <ComboBox x:Name="RoofType" Margin="0 3 2 0" SelectionChanged="RoofType_SelectionChanged">
                                            <ComboBoxItem Content="Двускатная"/>
                                            <ComboBoxItem Content="Вальма"/>
                                            <ComboBoxItem Content="Односкатная"/>
                                            <ComboBoxItem Content="Плоская"/>
                                        </ComboBox>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetFullHouseHeight"
                                            Text="Высота от пола верхнего этажа до конька - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0"/>
                                            <Button x:Name="Btn_SetFullHouseHeight" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Grid.Column="1" Margin="0,2,2,2" Click="Btn_SetFullHouseHeight_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetRoofMinWallHeight"
                                            Text="Минимальная высота стен верхнего этажа - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetRoofMinWallHeight" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Grid.Column="1" Click="Btn_SetRoofMinWallHeight_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetRoofSquare"
                                            Text="Площадь, накрытая основной кровлей - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetRoofSquare" Style="{StaticResource SquereBtn}"
                                                 Grid.Column="1" Click="Btn_SetRoofSquare_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetRoofLength"
                                            Text="Длина основной кровли - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetRoofLength" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Grid.Column="1" Click="Btn_SetRoofLength_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetCanopySquare"
                                            Text="Площадь, накрытая навесами - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetCanopySquare" Style="{StaticResource SquereBtn}"
                                                 Grid.Column="1" Click="Btn_SetCanopySquare_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetCanopyLength"
                                            Text="Длина навесов вдоль стены, общая - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetCanopyLength" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Grid.Column="1" Click="Btn_SetCanopyLength_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetPergolaSquare"
                                            Text="Площадь Перголы - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetPergolaSquare" Style="{StaticResource SquereBtn}"
                                                Grid.Column="1" Click="Btn_SetPergolaSquare_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetHemmingButt"
                                            Text="Подшива торцов основной кровли и навесов - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetHemmingButt" Style="{StaticResource RouletteBtn}"
                                                HorizontalAlignment="Right" Grid.Column="1" Click="Btn_SetHemmingButt_Click">
                                                <Image Source="Assets/roulette.png" />
                                            </Button>
                                        </Grid>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_SetHemmingOverhangsSquare"
                                            Text="Подшива свесов основной кровли снизу - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button x:Name="Btn_SetHemmingOverhangsSquare" Style="{StaticResource SquereBtn}"
                                                 Grid.Column="1" Click="Btn_SetHemmingOverhangsSquare_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox x:Name="Gb_Facade0Floor" Header="Цокольный этаж" Visibility="Collapsed">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>


                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_Set0FloorGlaseSq"
                                            Text="Площадь окон и стекляных дверей - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button 
                                                x:Name="Btn_Set0FloorGlaseQ"
                                                Style="{StaticResource SquereBtn}"
                                                Grid.Column="1" Click="Btn_Set0FloorGlaseQ_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                            <Button 
                                                x:Name="Btn_Set0FloorGlaseT"
                                                Style="{StaticResource SquereBtn}"
                                                Grid.Column="2" ToolTip="Треугольник" Click="Btn_Set0FloorGlaseT_Click">
                                                <Image Source="Assets/triangle.png" />
                                            </Button>
                                        </Grid>
                                        <TextBlock TextWrapping="Wrap"
                                                   x:Name="Tb_Set0FloorGlaseP"
                                            Text="Периметр окон и стекляных дверей - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />

                                    </StackPanel>
                                </GroupBox>
                                <GroupBox x:Name="Gb_Facade1Floor" Header="Первый этаж">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_Set1FloorGlaseSq"
                                            Text="Площадь окон и стекляных дверей - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button Style="{StaticResource SquereBtn}"
                                                    x:Name="Btn_Set1FloorGlaseQ"
                                                 Grid.Column="1" Click="Btn_Set1FloorGlaseQ_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                            <Button Style="{StaticResource SquereBtn}"
                                                    x:Name="Btn_Set1FloorGlaseT"
                                                 Grid.Column="2" ToolTip="Треугольник" Click="Btn_Set1FloorGlaseT_Click">
                                                <Image Source="Assets/triangle.png" />
                                            </Button>
                                        </Grid>
                                        <TextBlock TextWrapping="Wrap"
                                                   x:Name="Tb_Set1FloorGlaseP"
                                            Text="Периметр окон и стекляных дверей - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />

                                    </StackPanel>
                                </GroupBox>
                                <GroupBox x:Name="Gb_Facade2Floor" Header="Второй этаж" Visibility="Collapsed">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                       x:Name="Tb_Set2FloorGlaseSq"
                                            Text="Площадь окон и стекляных дверей - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button Style="{StaticResource SquereBtn}"
                                                    x:Name="Btn_Set2FloorGlaseQ"
                                                 Grid.Column="1" Click="Btn_Set2FloorGlaseQ_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                            <Button Style="{StaticResource SquereBtn}"
                                                    x:Name="Btn_Set2FloorGlaseT"
                                                 Grid.Column="2" ToolTip="Треугольник" Click="Btn_Set2FloorGlaseT_Click">
                                                <Image Source="Assets/triangle.png" />
                                            </Button>
                                        </Grid>
                                        <TextBlock TextWrapping="Wrap"
                                            Text="Периметр окон и стекляных дверей - 0 м." 
                                                    x:Name="Tb_Set2FloorGlaseP"
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox x:Name="Gb_Facade3Floor" Header="Третий этаж" Visibility="Collapsed">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock TextWrapping="Wrap"
                                                        x:Name="Tb_Set3FloorGlaseSq"
                                            Text="Площадь окон и стекляных дверей - 0 кв.м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />
                                            <Button Style="{StaticResource SquereBtn}"
                                                    x:Name="Btn_Set3FloorGlaseQ"
                                                 Grid.Column="1" Click="Btn_Set3FloorGlaseQ_Click">
                                                <Image Source="Assets/square.png" />
                                            </Button>
                                            <Button Style="{StaticResource SquereBtn}"
                                                    
                                                    x:Name="Btn_Set3FloorGlaseT"
                                                 Grid.Column="2" ToolTip="Треугольник" Click="Btn_Set3FloorGlaseT_Click">
                                                <Image Source="Assets/triangle.png" />
                                            </Button>
                                        </Grid>
                                        <TextBlock TextWrapping="Wrap"
                                                   x:Name="Tb_Set3FloorGlaseP"
                                            Text="Периметр окон и стекляных дверей - 0 м." 
                                                   HorizontalAlignment="Stretch" Grid.Column="0" />

                                    </StackPanel>
                                </GroupBox>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Text="Мансардные окна (шт.) - "/>
                                    <TextBox 
                                        x:Name="Tb_WindowCount"
                                        PreviewTextInput="NumberValidationTextBox" Grid.Column="1" 
                                        TextChanged="Tb_WindowCount_TextChanged"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>

                                    </Grid.ColumnDefinitions>
                                    <TextBlock Width="145" TextWrapping="Wrap"
                                            Grid.Column="0"
                                            Text="Мансардные окна примерная площадь (м.кв.) - "/>
                                    <TextBox x:Name="Tb_WindowSquare" Grid.Column="1" 
                                             PreviewTextInput="DecimalValidationTextBox" TextChanged="Tb_WindowSquare_TextChanged"
                                             />
                                </Grid>
               
                                <ComboBox x:Name="CB_FloorSelect" 
                                          Visibility="Collapsed"
                                          Margin="5" SelectionChanged="CB_FloorSelect_SelectionChanged">
                                    <ComboBoxItem Content="Первый этаж" IsSelected="True"/>
                                </ComboBox>

                                <Grid x:Name="GB_0FloorBlock" Visibility="Collapsed">
                                    <StackPanel>
                                        <TextBlock Text="Цокольный этаж"/>
                                        <GroupBox Header="ОД">
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="*"/>

                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="Площадь по полу (кв.м.) - "/>
                                                    <TextBox
                                                        x:Name="Tb_Set0FloorSquare" 
                                                        PreviewTextInput="DecimalValidationTextBox" Grid.Column="1" TextChanged="Tb_Set0FloorSquare_TextChanged"/>
                                                </Grid>
